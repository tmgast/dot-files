### Prompt Colors
# Modified version of @gf3â€™s Sexy Bash Prompt
# (https://github.com/gf3/dotfiles)
if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		PURPLE=$(tput setaf 141)
		GREEN=$(tput setaf 46)
		YELLOW=$(tput setaf 226)
		ORANGE=$(tput setaf 214)
		MAGENTA=$(tput setaf 9)
		RED=$(tput setaf 1)
		TEAL=$(tput setaf 51)
		WHITE=$(tput setaf 255)
	else
		BLACK=$(tput setaf 190)
		PURPLE=$(tput setaf 1)
		GREEN=$(tput setaf 2)
		YELLOW=$(tput setaf 3)
		ORANGE=$(tput setaf 4)
		MAGENTA=$(tput setaf 5)
		TEAL=$(tput setaf 6)
		WHITE=$(tput setaf 7)
		RED=$(tput setaf 8)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	BLACK="\033[01;30m"
	PURPLE="\033[1;35m"
	GREEN="\033[1;32m"
	YELLOW="\033[0;33m"
	ORANGE="\033[1;33m"
	MAGENTA="\033[1;31m"
	RED="\033[0;31m"
	TEAL="\033[0;36m"
	WHITE="\033[1;37m"
	BOLD=""
	RESET="\033[m"
fi

export BLACK
export PURPLE
export GREEN
export YELLOW
export ORANGE
export MAGENTA
export RED
export TEAL
export WHITE
export BOLD
export RESET
